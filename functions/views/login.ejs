<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <style>
    body {
      background-color: #eee;
    }

    .login-card {
      border-radius: 25px;
      margin-top: 4rem;
      padding: 1.5rem; /* Adjust the padding to make the container smaller */
      max-width: 400px; /* Limit the maximum width of the container */
      margin-left: auto;
      margin-right: auto;
    }

    .login-card-title {
      font-weight: bold;
      font-size: 2.5rem;
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-form-label {
      font-weight: bold;
    }

    .login-form-control {
      margin-bottom: 1rem;
      width: 100%; /* Set the width to 100% to make the text input longer */
    }

    .show-password-label {
      margin-top: 0.5rem;
    }

    .login-buttons {
      display: flex;
      justify-content: center;
      margin-top: 2rem;
    }

    .register-link {
      margin-right: 1rem;
    }

    .form-container {
      height: 100vh; /* Adjust the height of the form container */
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>

<body>
  <section>
    <div class="form-container">
      <div class="card text-black login-card">
        <div class="card-body p-md-6">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <h1 class="login-card-title">Login</h1>
              <form class="needs-validation" action="/login" method="post">
                <div class="mb-6">
                  <label class="form-label login-form-label">Email</label>
                  <input type="email" id="email" class="form-control login-form-control" name="email" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>

                <div class="mb-4">
                  <label class="form-label login-form-label">Password</label>
                  <div class="input-group">
                    <input type="password" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                      minlength="8" class="form-control login-form-control" placeholder="Enter your Password"
                      name="password" required>
                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">
                      Show Password
                    </button>
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>

                <div class="login-buttons">
                  <a href="/register" class="btn btn-outline-link register-link">Register</a>
                  <input class="btn btn-outline-success" type="submit" value="Login">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <script>
    function togglePasswordVisibility() {
      var passwordInput = document.getElementById("password");
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
      } else {
        passwordInput.type = "password";
      }
    }
  </script>
</body>
</html>
